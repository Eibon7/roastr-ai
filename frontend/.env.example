# Supabase Configuration (Required for real mode)
# If these are not set, Mock Mode will be automatically enabled
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Mock Mode Configuration
# Force mock mode even when Supabase is configured (optional)
# REACT_APP_ENABLE_MOCK_MODE=true

# Authentication Configuration
REACT_APP_USE_MAGIC_LINK=true

# App Configuration
REACT_APP_APP_NAME=Roastr.ai
REACT_APP_SUPPORT_EMAIL=support@roastr.ai

# React App Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api

# Feature Flags
REACT_APP_ENABLE_STYLE_PROFILE=true
REACT_APP_ENABLE_OAUTH_CONNECTIONS=true
REACT_APP_ENABLE_SESSION_REFRESH=true

# Mock Mode for CI/Testing
REACT_APP_ENABLE_MOCK_MODE=true