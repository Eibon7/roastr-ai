# ============================================================
# ROASTR.AI - STAGING ENVIRONMENT CONFIGURATION
# ============================================================
# Este archivo define las variables necesarias para el entorno de staging.
# Todos los valores deben ser configurados antes del despliegue.
# NO incluir valores reales ni secretos en este archivo.
# ============================================================

# ============================================================
# ENTORNO
# ============================================================
NODE_ENV=staging
PORT=3000

# ============================================================
# SUPABASE (Base de datos y autenticación)
# ============================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# ============================================================
# AUTH & SEGURIDAD
# ============================================================
# Magic Link Authentication
ENABLE_MAGIC_LINK=true

# Password Security
ENABLE_PASSWORD_HISTORY=true

# Rate Limiting
ENABLE_RATE_LIMIT=true

# CSRF Protection
ENABLE_CSRF_PROTECTION=true

# Response Caching
ENABLE_RESPONSE_CACHE=true
DEBUG_CACHE=false

# ============================================================
# REDIS / UPSTASH (Cola de trabajos y rate limiting)
# ============================================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Queue Configuration
QUEUE_PREFER_REDIS=true
QUEUE_DLQ_ENABLED=true
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# ============================================================
# EMAIL / RESEND (Servicio de email)
# ============================================================
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_FROM_NAME=Roastr.ai

# Support & App URLs
SUPPORT_EMAIL=support@roastr.ai
APP_URL=
APP_PUBLIC_URL=
PUBLIC_BASE_URL=
FRONTEND_URL=

# Supabase Auth redirect URLs (required for password recovery / magic link)
SUPABASE_REDIRECT_URL=
# Optional but recommended if you use a separate reset route
SUPABASE_RESET_PASSWORD_URL=

# ============================================================
# POLAR (Pagos y suscripciones)
# ============================================================
