# =============================================================================
# Roastr.ai Multi-Tenant Environment Configuration
# =============================================================================

# Core Database & Queue Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# AI & Moderation APIs
OPENAI_API_KEY=sk-your-openai-key-here
PERSPECTIVE_API_KEY=your-perspective-api-key-here

# API Key for /roast endpoint
ROASTR_API_KEY=your-roastr-api-key

# =============================================================================
# Integration System Controls
# =============================================================================

INTEGRATIONS_ENABLED=twitter,youtube,bluesky,instagram
MAX_CONCURRENT_INTEGRATIONS=3

# Tone and Frequency Personalization (per platform, optional)
TWITTER_TONE=sarcastic
TWITTER_HUMOR_TYPE=witty
TWITTER_RESPONSE_FREQUENCY=1.0

YOUTUBE_TONE=ironic
YOUTUBE_RESPONSE_FREQUENCY=0.5

# Shield Mode
ROASTR_MODE=normal         # normal | shield
ROASTR_SHIELD_ENABLED=false
TWITTER_SHIELD_MUTE=false
YOUTUBE_SHIELD_REMOVE=false

# Debug & Logs
DEBUG=true
LOG_LEVEL=info
LOG_ROTATION=true

# =============================================================================
# Feature Flags Configuration
# =============================================================================

# Authentication & Security Features
ENABLE_SESSION_REFRESH=true
ENABLE_RATE_LIMIT=true
ENABLE_OAUTH_MOCK=true

# Core Feature Flags
ENABLE_STYLE_PROFILE=true
ENABLE_RQC=false
ENABLE_SHIELD=true
ENABLE_MOCK_MODE=false

# OAuth Provider Flags (set to true when credentials are configured)
ENABLE_TWITTER_OAUTH=false
ENABLE_INSTAGRAM_OAUTH=false
ENABLE_YOUTUBE_OAUTH=false
ENABLE_TIKTOK_OAUTH=false
ENABLE_LINKEDIN_OAUTH=false
ENABLE_FACEBOOK_OAUTH=false
ENABLE_BLUESKY_OAUTH=false

# Debug Flags
DEBUG_OAUTH=false
DEBUG_SESSION=false
DEBUG_RATE_LIMIT=false

# =============================================================================
# Platform Integration Enable/Disable Flags
# =============================================================================

ENABLED_INSTAGRAM=true
ENABLED_FACEBOOK=true
ENABLED_DISCORD=true
ENABLED_TWITCH=true
ENABLED_REDDIT=true
ENABLED_TIKTOK=true
ENABLED_BLUESKY=true
ENABLED_TWITTER=true
ENABLED_YOUTUBE=true

# =============================================================================
# Platform API Credentials
# =============================================================================

# Twitter Integration
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_APP_KEY=your-twitter-api-key
TWITTER_APP_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# YouTube Integration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-channel-id
YOUTUBE_MONITORED_VIDEOS=abc123,def456

# Instagram Integration
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Facebook Integration
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-token
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=your-discord-server-id

# Twitch Integration
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
TWITCH_ACCESS_TOKEN=your-twitch-access-token
TWITCH_REFRESH_TOKEN=your-twitch-refresh-token
TWITCH_CHANNEL=your-twitch-channel

# Reddit Integration
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# TikTok Integration
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# Bluesky Integration
BLUESKY_IDENTIFIER=your-handle.bsky.social
BLUESKY_PASSWORD=your-bluesky-app-password

# =============================================================================
# Stripe Billing Configuration (Test Mode)
# =============================================================================

# Stripe API Keys (Test Mode - starts with sk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price Lookup Keys (configure these in Stripe Dashboard)
STRIPE_PRICE_LOOKUP_PRO=pro_monthly
STRIPE_PRICE_LOOKUP_CREATOR=creator_plus_monthly

# Stripe Checkout URLs
STRIPE_SUCCESS_URL=http://localhost:3000/billing-success.html?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=http://localhost:3000/billing-cancelled.html
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/billing.html

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000
