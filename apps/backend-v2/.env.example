# Amplitude Analytics
# Get your API key from: https://analytics.amplitude.com/
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# Application
NODE_ENV=development
APP_VERSION=2.0.0

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Auth redirect URL (used for password recovery / magic link callbacks)
# Required in production and must be https://
SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback

# Auth Email Provider (Resend)
# Backend-v2 does NOT render email HTML. Supabase Auth handles templates + sending (SMTP).
RESEND_API_KEY=your_resend_api_key_here
AUTH_EMAIL_FROM="Roastr.ai <noreply@roastr.ai>"
# Optional
AUTH_EMAIL_REPLY_TO=support@roastr.ai

# Server
PORT=3002

